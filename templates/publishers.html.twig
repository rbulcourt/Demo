{% extends "layout.html.twig" %}

{% block page %}
<div class="panel panel-default">
  <div class="panel-heading">Liste des auteurs</div>
  <div class="panel-body">
    <p>Voici la liste des éditeurs</p>
    <p>Vous pouvez modifier ou supprimer un éditeur, ou encore en ajouter un ci-dessous</p>
  </div>
</div>
<table class="table">
	<tr>
		<th>Nom</th>
		<th></th>
	</tr>
	{% for pub in publishers %}
		<tr>
        	<td>{{pub.name}}</td>
        	<td style="width: 150px;">
        		<div class="btn-group" role="group">
	        		<a href="{{urlFor('editPublisher', {'id': pub.id})}}" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
	        		<a href="{{urlFor('delPublisher', {'id': pub.id})}}" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
				</div>
        	</td>
    	</tr>
	{% endfor %}
</table>

<div id="formPub">
	<label>Ajouter un éditeur</label>
	<form action="addPublisher" method="post">
		<div class="input-group" style="width: 15%;">
	    	<span class="input-group-addon" id="basic-addon1" style="width: 75px;">Nom</span>
			<input type="text" class="form-control" id="nom" name="nom" />
		</div>
		<div style="margin-top: 4px;">
			<button type="submit" class="btn btn-default">Ajouter</button>
		</div>
	</form>
</div>

{% endblock %}