{% extends "layout.html.twig" %}

{% block page %}
    <label>Modifier un auteur</label>
    <form action="saveAuthor" method="post">
        <div>
            <input type="hidden" id="id" name="id" value="{{Author.id}}"/>
        </div>
        <div class="input-group" style="width: 15%; margin-top: 4px;">
            <span class="input-group-addon" id="basic-addon1" style="width: 135px;">Nouveau Nom</span>
            <input type="text" class="form-control" id="nom" name="nom" value="{{Author.firstName}}" onFocus="javascript:this.value=''"/>
        </div> 
        <div class="input-group" style="width: 15%; margin-top: 4px;">
            <span class="input-group-addon" id="basic-addon1" style="width: 135px;">Nouveau Pr√©nom</span>
            <input type="text" class="form-control" id="prenom" name="prenom" value="{{Author.lastName}}" onFocus="javascript:this.value=''"/>
        </div>  
        <div class="button" style="margin-top: 4px;">
            <button type="submit" class="btn btn-default">Modifier</button>
        </div>
    </form>

{% endblock %}