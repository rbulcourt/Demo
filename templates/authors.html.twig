{% extends "layout.html.twig" %}

{% block page %}
<div class="panel panel-default" style="margin:10px;">
  <div class="panel-heading">Liste des auteurs</div>
  <div class="panel-body">
    <p>Voici la liste des auteurs</p>
    <p>Vous pouvez modifier ou supprimer un auteur, ou encore en ajouter un ci-dessous</p>
  </div>
	<table class="table">
		<tr>
			<th>Nom</th>
			<th>Prenom</th>
		</tr>
		{% for aut in Authors %}
			<tr>
	        	<td>{{ aut.firstName}}</td>
	        	<td>{{ aut.lastName}}</td>
	        	<td style="width: 150px;">
	        		<div class="btn-group" role="group">
		        		<a href="{{ urlFor('delAuthor', {'id': aut.id})}}" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
		        		<a href="{{ urlFor('editAuthor', {'id': aut.id})}}" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
					</div>
	        	</td>
	    	</tr>
		{% endfor %}
	</table>
</div>

<div id="formAut" style="margin: 10px;">
	<label>Ajouter un auteur</label>
	<form action="addAuthor" method="post">
		<div class="input-group" style="width: 15%;">
	    	<span class="input-group-addon" id="basic-addon1" style="width: 75px;">Nom</span>
			<input type="text" class="form-control" id="nom" name="nom" />
		</div> 
		<div class="input-group" style="width: 15%; margin-top: 4px;">
	    	<span class="input-group-addon" id="basic-addon1" style="width: 75px;">Prenom</span>
			<input type="text" class="form-control" id="prenom" name="prenom" />
		</div> 
		<div style="margin-top: 4px;">
			<button type="submit" class="btn btn-default">Ajouter</button>
		</div>
	</form>
</div>

{% endblock %}